<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- Check box -->
    <style name="CheckBoxTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/pap_check_box_normal</item>
        <item name="colorControlActivated">@color/pap_yellow</item>
        <item name="colorControlHighlight">#ff9800</item>
        <item name="android:textSize">@dimen/material_text_subhead2</item>
        <item name="android:textColor">@color/pap_white</item>
    </style>

    <!-- Positive Button -->
    <style name="PositiveButtonTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/pap_white</item>
        <item name="android:textSize">@dimen/material_text_subhead1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:background">@drawable/selector_button_positive_splash</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:enabled">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Facebook Button -->
    <style name="FacebookButtonTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/pap_white</item>
        <item name="android:textSize">@dimen/material_text_subhead1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:background">@drawable/selector_button_facebook_splash</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:enabled">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Edit Text Email Login -->
    <style name="EditTextEmailTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawableStart">@drawable/ic_login_edittext_email</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/login_email_hint</item>
        <item name="android:textColorHint">@color/color_edittext_hint</item>
        <item name="android:textColor">@color/color_edittext_text</item>
        <item name="android:textCursorDrawable">@color/color_edittext_cursor</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:minHeight">38dp</item>
    </style>

    <!-- Edit Text Password Login -->
    <style name="EditTextPasswordTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawableStart">@drawable/ic_login_edittext_email</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/login_password_hint</item>
        <item name="android:textColorHint">@color/color_edittext_hint</item>
        <item name="android:textColor">@color/color_edittext_text</item>
        <item name="android:textCursorDrawable">@color/color_edittext_cursor</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:minHeight">38dp</item>
    </style>

    <!-- Log In Button -->
    <style name="LoginButtonTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/pap_white</item>
        <item name="android:textSize">@dimen/material_text_subhead1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:background">@drawable/selector_button_login_splash</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:enabled">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
